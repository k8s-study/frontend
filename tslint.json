{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-config-airbnb"
    ],
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "import-name": false,
        "jsx-boolean-value": false,
        "jsx-no-multiline-js": false,
        "max-line-length": [
            true,
            180
        ],
        "no-implicit-dependencies": false,
        "no-increment-decrement": false,
        "no-submodule-imports": [
            true,
            "@common",
            "@components",
            "@layouts",
            "@model",
            "@redux",
            "@route",
            "@shared",
            "@static",
            "@util",
            "next",
            "bootstrap"
        ],
        "object-literal-sort-keys": false,
        "object-shorthand-properties-first": false,
        "prefer-for-of": false,
        "ter-indent": [
            true,
            4
        ],
        "triple-equals": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ]
    }
}